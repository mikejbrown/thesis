\begin_inset Formula 
\begin{align}
W\left[K\right] & =-\frac{1}{2}\ln\left(1+k\right)-\rho\left[\left(1+k\right)^{2}-1\right]-\ln\mathrm{K}_{1/4}\left(\rho\left(1+k\right)^{2}\right)+\ln\mathrm{K}_{1/4}\left(\rho\right).
\end{align}

\end_inset

