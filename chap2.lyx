\begin_inset Formula 
\begin{align}
m^{2}\left\langle q^{2}\right\rangle _{K} & =4\rho\left(1+k\right)\left[\frac{\mathrm{K}_{3/4}\left(\rho\left(1+k\right)^{2}\right)}{\mathrm{K}_{1/4}\left(\rho\left(1+k\right)^{2}\right)}-1\right],
\end{align}

\end_inset

