\begin_inset Formula 
\begin{align*}
\frac{\delta W}{\delta J_{a}} & =\varphi_{a},\\
\frac{\delta W}{\delta K_{ab}} & =\frac{1}{2}\left(i\hbar\Delta_{ab}+\varphi_{a}\varphi_{b}\right).
\end{align*}

\end_inset

